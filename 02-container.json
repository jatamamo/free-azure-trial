{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "allowedValues": [
                "dev",
                "q&a",
                "pro"
            ],
            "defaultValue": "pre"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Data center for the resource location."
            }
        },
        "storageName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24,
            "metadata" : {
                "description": "Unique DNS Name for the Storage Account."
            }
        },     
        "storageSKU": {
            "type": "string",
            "metadata": {
                "description": "Approved SKUs for deployment."
            },
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS",
                "Premium_ZRS",
                "Standard_GZRS",
                "Standard_RAGZRS"
            ],
            "defaultValue": "Standard_LRS"
        }
    },
    "functions": [],
    "variables": {
        "accountName": "[concat(parameters('environment'),parameters('storageName'),uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "name": "[variables('accountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-06-01",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('storageSKU')]"
            }
        },
    {
        "name": "[concat(variables('accountName'),'/default/input')]",
        "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
        "apiVersion": "2021-04-01",
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('accountName'))]"
        ],
        "properties": {
            "publicAccess": "None"
        }
    }
    ],
    "outputs": {}
}